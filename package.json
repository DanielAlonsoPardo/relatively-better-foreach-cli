{
  "name": "foreach-cli",
  "version": "1.4.0",
  "description": "CLI util to execute a command for each file matching a glob",
  "keywords": [
    "cli",
    "foreach",
    "each",
    "command",
    "foreach-command",
    "run",
    "line"
  ],
  "main": "foreach.js",
  "bin": {
    "foreach": "./foreach.js"
  },
  "author": "danielkalen",
  "repository": {
    "type": "git",
    "url": "https://github.com/danielkalen/foreach-cli"
  },
  "license": "MIT",
  "mocha_opts": "-u tdd -b --compilers coffee:coffee-script/register --slow 500 --timeout 3000 -R spec",
  "scripts": {
    "watch": "nodemon -e coffee -w ./src -x 'npm run build'",
    "build": "npm run compile && npm run prependbin && npm run makeexec",
    "compile": "coffee -o ./ -c src/foreach.coffee",
    "prependbin": "echo '#!/usr/bin/env node' | cat - foreach.js > tmp.js && mv tmp.js foreach.js",
    "makeexec": "chmod +x foreach.js && chmod +x src/foreach.coffee",
    "badge": "coffee .config/badge-gen.coffee",
    "istanbul": "istanbul cover --dir test/coverage/node node_modules/mocha/bin/_mocha -- $npm_package_mocha_opts",
    "test": "mocha $npm_package_mocha_opts"
  },
  "dependencies": {
    "chalk": "^1.1.3",
    "glob": "^6.0.4",
    "node-status": "^0.1.7",
    "yargs": "^3.29.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "chai-spies": "^0.7.1",
    "coffee-script": "^1.10.0",
    "create-output-stream": "0.0.1",
    "fs-extra": "^0.30.0",
    "istanbul": "^0.4.5",
    "lcov-parse": "0.0.10",
    "mocha": "^3.0.2",
    "nodemon": "^1.8.1",
    "request": "^2.74.0",
    "svg2png": "^3.0.1"
  }
}
